  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "8144be4a2fe0"
          },
          "name": {
            "type": "string",
            "example": "pedro"
          },
          "room_id": {
            "type": "string",
            "example": "234567"
          },
          "score": {
            "type": "number",
            "default": 0,
            "format": "float",
            "example": 10.5
          },
          "status": {
            "type": "string",
            "default": "unknown",
            "enum": [
              "unknown",
              "connect",
              "disconnect"
            ]
          }
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "455420"
          },
          "owner": {
            "type": "string",
            "example": "doggie"
          },
          "quiz_id": {
            "type": "string",
            "example": "8144be4a2fe0"
          },
          "quiz_count": {
            "type": "integer",
            "default": 5,
            "format": "int64",
            "example": 5
          },
          "status": {
            "type": "string",
            "default": "created",
            "enum": [
              "created",
              "started",
              "full",
              "empty"
            ]
          }
        }
      },
      "Quiz": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "4ac6075348f3"
          },
          "name": {
            "type": "string",
            "example": "doggie"
          },
          "description": {
            "type": "string",
            "example": "8144be4a2fe0"
          },
          "questions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Question"
            }
          }
        }
      },
      "Question": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "4ac6075348f3"
          },
          "text": {
            "type": "string",
            "example": ""
          },
          "options": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Response"
            }
          }
        }
      },
      "Response": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "4ac6075348f3"
          },
          "text": {
            "type": "string",
            "example": ""
          },
          "status": {
            "type": "string",
            "enum": [
              "correct",
              "incorrect"
            ]
          }
        }
      },
      "UserCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "pedro"
          }
        }
      },
      "RoomCreate": {
        "required": [
          "owner"
        ],
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "example": "doggie"
          },
          "quiz_id": {
            "type": "string",
            "example": "8144be4a2fe0"
          },
          "quiz_count": {
            "type": "integer",
            "default": 5,
            "format": "int64",
            "example": 5
          }
        }
      },
      "QuizCreate": {
        "type": "object",
        "required": [
          "name",
          "description"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "doggie"
          },
          "description": {
            "type": "string",
            "example": "8144be4a2fe0"
          },
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string",
                  "example": ""
                },
                "options": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "text": {
                        "type": "string",
                        "example": ""
                      },
                      "status": {
                        "type": "string",
                        "enum": [
                          "correct",
                          "incorrect"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
